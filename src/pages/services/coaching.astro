---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<BaseLayout
  title="Coaching | Kristi Hemmer"
  description="Individual and group coaching for changemakers. PoWer Course and Moxie Mission sessions."
>
  <Header />

  <main>
    <!-- SECTION 1: Hero Section -->
    <section class="py-20 md:py-32" style="background: linear-gradient(135deg, #FFFFFF 0%, #FFFBF0 50%, #FFF3E0 100%);">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
          <div>
            <h1 class="text-5xl md:text-6xl font-bold mb-6">
              Grow Your <span class="text-moxie-pink">MOXIE</span>
            </h1>
            <p class="text-xl text-gray-700 mb-8 leading-relaxed">
              Coaching for leaders ready to be unapologetic and create change. Transform your
              courage into lasting power with individual or group coaching.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="#power-course" class="bg-moxie-pink text-white font-bold px-8 py-4 rounded-lg hover:bg-moxie-pink-alt transition-all transform hover:scale-105 text-lg text-center">
                Explore PoWer Course
              </a>
              <a href="#booking" class="border-2 border-moxie-pink text-moxie-pink font-bold px-8 py-4 rounded-lg hover:bg-moxie-pink hover:text-white transition-all text-lg text-center">
                Book Moxie Mission
              </a>
            </div>
          </div>

          <div class="relative">
            <img
              src="/images/coaching.jpg"
              alt="Kristi Hemmer coaching session"
              class="rounded-lg shadow-2xl w-full"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- SECTION 2: PoWer Course -->
    <section id="power-course" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-bold text-center mb-4">
            The <span class="text-moxie-pink">PoWer</span> Course
          </h2>
          <p class="text-xl text-center text-gray-600 mb-12">
            Signature online course. Accessible, inclusive, and pure MOXIE.
          </p>

          <div class="bg-white rounded-lg shadow-xl p-8 md:p-12">
            <p class="text-lg text-gray-700 mb-8 leading-relaxed">
              Three months of MOXIE, a life forever changed, and a group of women who support you
              beyond graduation. Cohort-based learning with group coaching and lifelong community.
            </p>

            <!-- Target Audiences -->
            <h3 class="text-2xl font-bold mb-6 text-moxie-pink">Who It's For</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
              <div class="bg-gray-50 p-4 rounded-lg text-center">
                <p class="font-semibold text-charcoal">Young Professionals</p>
              </div>
              <div class="bg-gray-50 p-4 rounded-lg text-center">
                <p class="font-semibold text-charcoal">Entrepreneurs</p>
              </div>
              <div class="bg-gray-50 p-4 rounded-lg text-center">
                <p class="font-semibold text-charcoal">Executives</p>
              </div>
              <div class="bg-gray-50 p-4 rounded-lg text-center">
                <p class="font-semibold text-charcoal">Menopausal Women</p>
              </div>
              <div class="bg-gray-50 p-4 rounded-lg text-center">
                <p class="font-semibold text-charcoal">Men with Moxie</p>
              </div>
            </div>

            <!-- Duration Options -->
            <h3 class="text-2xl font-bold mb-6 text-moxie-pink">Duration Options</h3>
            <div class="grid md:grid-cols-3 gap-6 mb-8">
              <div class="border-2 border-gray-200 p-6 rounded-lg text-center hover:border-moxie-pink transition-colors">
                <p class="text-3xl font-bold text-moxie-pink mb-2">3</p>
                <p class="text-gray-700">Months</p>
              </div>
              <div class="border-2 border-gray-200 p-6 rounded-lg text-center hover:border-moxie-pink transition-colors">
                <p class="text-3xl font-bold text-moxie-pink mb-2">6</p>
                <p class="text-gray-700">Months</p>
              </div>
              <div class="border-2 border-gray-200 p-6 rounded-lg text-center hover:border-moxie-pink transition-colors">
                <p class="text-3xl font-bold text-moxie-pink mb-2">12</p>
                <p class="text-gray-700">Months</p>
              </div>
            </div>

            <div class="text-center">
              <a href="#booking" class="inline-block bg-moxie-pink text-white font-bold px-8 py-4 rounded-lg hover:bg-moxie-pink-alt transition-colors text-lg">
                Join the Waitlist
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- SECTION 3: Group Coaching -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-bold text-center mb-4">
            <span class="text-moxie-pink">Group</span> Coaching
          </h2>
          <p class="text-xl text-center text-gray-600 mb-12">
            Create your own group at work. 6-12 participants.
          </p>

          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-gray-50 p-8 rounded-lg">
              <h3 class="text-2xl font-bold mb-4 text-moxie-pink">Women Only</h3>
              <p class="text-gray-700 mb-4">
                Create a safe space for women leaders to grow together. Build community
                and accountability within your organization.
              </p>
              <ul class="space-y-2 text-gray-700 mb-6">
                <li class="flex items-start">
                  <span class="text-moxie-pink mr-2">•</span>
                  6-12 participants per cohort
                </li>
                <li class="flex items-start">
                  <span class="text-moxie-pink mr-2">•</span>
                  Customized to your organization's goals
                </li>
                <li class="flex items-start">
                  <span class="text-moxie-pink mr-2">•</span>
                  Regular group sessions with Kristi
                </li>
              </ul>
              <a href="#booking" class="text-moxie-pink font-semibold hover:underline">
                Learn More →
              </a>
            </div>

            <div class="bg-gray-50 p-8 rounded-lg">
              <h3 class="text-2xl font-bold mb-4 text-moxie-pink">Co-Ed</h3>
              <p class="text-gray-700 mb-4">
                Bring your whole team together. Men as change agents and women leaders
                learning and growing side by side.
              </p>
              <ul class="space-y-2 text-gray-700 mb-6">
                <li class="flex items-start">
                  <span class="text-moxie-pink mr-2">•</span>
                  6-12 participants per cohort
                </li>
                <li class="flex items-start">
                  <span class="text-moxie-pink mr-2">•</span>
                  Focus on allyship and inclusive leadership
                </li>
                <li class="flex items-start">
                  <span class="text-moxie-pink mr-2">•</span>
                  Regular group sessions with Kristi
                </li>
              </ul>
              <a href="#booking" class="text-moxie-pink font-semibold hover:underline">
                Learn More →
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- SECTION 4: Moxie Mission Session -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            <span class="text-moxie-pink">Moxie Mission</span> Session
          </h2>
          <p class="text-xl text-gray-600 mb-8">
            Single breakthrough session. 90 minutes of focused clarity and action.
          </p>
          <p class="text-lg text-gray-700 mb-8">
            Perfect for a specific challenge or decision point. Get clear, get focused,
            and get moving.
          </p>
          <a href="#booking" class="inline-block bg-moxie-pink text-white font-bold px-8 py-4 rounded-lg hover:bg-moxie-pink-alt transition-colors text-lg">
            Book a Moxie Mission
          </a>
        </div>
      </div>
    </section>

    <!-- SECTION 5: Booking Form -->
    <section id="booking" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-bold text-center mb-8">
            Start Your <span class="text-moxie-pink">Journey</span>
          </h2>
          <p class="text-xl text-center text-gray-600 mb-12">
            Fill out the form below to start your coaching journey.
          </p>

          <div class="bg-gray-50 p-10 rounded-lg shadow-xl">
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Your Name *</label>
                  <input type="text" id="name" name="name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-moxie-pink" />
                </div>
                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address *</label>
                  <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-moxie-pink" />
                </div>
              </div>

              <div>
                <label for="coaching-type" class="block text-sm font-semibold text-gray-700 mb-2">What interests you? *</label>
                <select id="coaching-type" name="coaching-type" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-moxie-pink">
                  <option value="">Select coaching type</option>
                  <option value="power-course">PoWer Course</option>
                  <option value="group-women">Group Coaching (Women Only)</option>
                  <option value="group-coed">Group Coaching (Co-Ed)</option>
                  <option value="moxie-mission">Moxie Mission Session</option>
                  <option value="not-sure">Not Sure Yet</option>
                </select>
              </div>

              <div>
                <label for="goals" class="block text-sm font-semibold text-gray-700 mb-2">What are you hoping to achieve?</label>
                <textarea id="goals" name="goals" rows="4" placeholder="Share your goals..." class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-moxie-pink"></textarea>
              </div>

              <div class="text-center">
                <button type="submit" class="bg-moxie-pink text-white font-bold px-10 py-4 rounded-lg hover:bg-moxie-pink-alt transition-all transform hover:scale-105 text-lg">
                  Start Your MOXIE Journey
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- SECTION 6: Final CTA -->
    <section class="py-20" style="background: linear-gradient(135deg, #FFFFFF 0%, #FFFBF0 50%, #FFF3E0 100%);">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-5xl md:text-6xl font-bold mb-6 text-charcoal">
          Ready to <span class="text-moxie-pink">Transform</span>?
        </h2>
        <p class="text-2xl mb-12 max-w-3xl mx-auto text-gray-700">
          Stop waiting. It's time to grow your MOXIE and step into your power.
        </p>

        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a href="#booking" class="bg-moxie-pink text-white font-bold px-10 py-5 rounded-lg hover:bg-moxie-pink-alt transition-all transform hover:scale-105 text-xl">
            Get Started
          </a>
          <a href="/moxie-on" class="border-2 border-moxie-pink text-moxie-pink font-bold px-10 py-5 rounded-lg hover:bg-moxie-pink hover:text-white transition-all text-xl">
            Schedule a Call
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
